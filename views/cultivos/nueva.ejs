<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles.css">
    <title>Nuevos Cultivos</title>
  </head>
  <body class="container mt-5">
    <h1 class="text-center">Nuevo Cultivo</h1>

    <form action="/cultivos/nueva" method="post">
      <div class="mb-3">

        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" name="nombre" required/>

        <label for="fechaSiembra" class="form-label">Fecha de siembra</label>
        <input type="date" class="form-control" name="fechaSiembra" required/>

        <label for="fechaCosecha" class="form-label">Fecha de cosecha</label>
        <input type="date" class="form-control" name="fechaCosecha" required/>

        <label for="hacienda" class="form-label">Hacienda</label>
        <select name="hacienda" class="form-select" required>
          <% haciendas.forEach(function(hacienda){ %>
          <option value="<%= hacienda._id %>"><%= hacienda.nombre %></option>
          <% }); %>
        </select>

        <div class="mb-3">
          <label for="hacienda" class="form-label">Hacienda</label>
          <select name="hacienda" class="form-select" required>
              <option value="" disabled selected>Seleccione una hacienda</option>
              <% haciendas.forEach(function(hacienda){ %>
                  <option value="<%= hacienda._id %>"><%= hacienda.nombre %></option>
              <% }); %>
          </select>
      </div>
      
      <div class="mb-3">
          <label for="parcela" class="form-label">Parcela</label>
          <select name="parcela" class="form-select" required>
              <option value="" disabled selected>Seleccione una parcela</option>
              <% parcelas.forEach(function(parcela){ %>
                  <option value="<%= parcela._id %>"><%= parcela.nombre %></option>
              <% }); %>
          </select>
      </div>

        <button type="submit" class="btn btn-primary mt-3">Guardar</button>
      </div>
    </form>
  </body>
</html>
