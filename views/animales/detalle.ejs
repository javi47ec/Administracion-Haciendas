<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Detalle del Animal</title>
</head>
<body class="container mt-5">

<div class="container d-flex flex-column align-items-center justify-content-center">
    <div class="card text-center" style="max-width: 50rem;">
        <div class="card-body">

            <h1 class="card-title">Detalle del Animal</h1>
            <p class="card-text"><strong>Nombre:</strong> <%= animal.nombre %></p>
            <p class="card-text"><strong>Fecha de Nacimiento:</strong> <%= new Date(animal.fechaNacimiento).toLocaleDateString('es-ES') %></p>
            <p class="card-text"><strong>Sexo:</strong> <%= animal.sexo %></p>
            <p class="card-text"><strong>Estado:</strong> <%= animal.estado %></p>
            <p class="card-text"><strong>Hacienda:</strong> <%= obtenerNombreHacienda(animal.hacienda, haciendas) %></p>

            <a href="/animales" class="btn btn-secondary mt-3">Volver</a>
        </div>
    </div>
</div>

<!-- Agrega las siguientes referencias a Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-GLhlTQ8iKuO7u6z6D5s3HYBUvAz/BYB1KAIdB+q3GGOpDIIl+VdYU5f5iJq4meM" crossorigin="anonymous"></script>

<% function obtenerNombreHacienda(haciendaId, haciendas) { 
  const hacienda = haciendas.find(h => h._id.toString() === haciendaId.toString());
  return hacienda ? hacienda.nombre : 'No disponible';
} %>




</body>
</html>
